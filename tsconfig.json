{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {
      "@core/*": ["core/*"],
      "@sim/*": ["simulators/*"],
      "@cli/*": ["cli/*"]
    },
    "outDir": "dist",
    "declaration": true,
    "skipLibCheck": true
  },
  "include": ["core/**/*", "simulators/**/*", "pipelines/**/*", "cli/**/*"],
  "exclude": ["node_modules", "dist"]
}
