{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {
      "@core/*": ["core/*"]
    },
    "outDir": "dist",
    "declaration": true,
    "skipLibCheck": true
  },
  "include": [
    "core/**/*",
    "simulators/**/*",
    "pipelines/**/*",
    "cli/**/*",
    "examples/functors",
    "core/pipelines",
    "cli"
  ],
  "exclude": ["node_modules", "dist"]
}
