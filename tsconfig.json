{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "resolveJsonModule": true,
    "baseUrl": "./",
    "outDir": "dist",
    "declaration": true,
    "skipLibCheck": true,
    "downlevelIteration": true,
    "paths": {
      "src/*": ["./src/*"]
    }
  },
  "include": ["src/**/*", "src/world-systems/examples/**/*", "types"]
}
